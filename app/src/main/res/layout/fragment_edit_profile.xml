<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/very_light">

        <!-- Header with circular avatar and name fields beside it -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">
                
                <EditText
                    android:id="@+id/et_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Фамилия"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Имя"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/et_patronymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Отчество"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Роль:"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"/>
                
            <TextView
                android:id="@+id/tv_role_display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пациент"
                android:textSize="16sp"
                android:textColor="@color/pastel_primary_dark"/>
                
            <Switch
                android:id="@+id/switch_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Врач"
                android:textOff="Пациент"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Телефон"
            android:inputType="phone"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пол:"/>
            <TextView
                android:id="@+id/tv_gender_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Мужской"
                android:layout_marginStart="12dp"/>
            <Switch
                android:id="@+id/sw_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Ж"
                android:textOff="М"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дата рождения"
            android:focusable="true"
            android:clickable="true"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Patient-only editable fields -->
        

        <!-- Non-editable for patients. Shown as read-only in edit screen -->
        <EditText
            android:id="@+id/et_diseases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Диагнозы (только просмотр)"
            android:focusable="false"
            android:clickable="false"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_med_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="История болезни (только просмотр)"
            android:focusable="false"
            android:clickable="false"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Doctor-only field -->
        <EditText
            android:id="@+id/et_specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Должность (для врача)"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/pastel_primary_dark"
            android:background="@android:color/holo_blue_bright"/>

    </LinearLayout>
</ScrollView>


